{
	"exclude": ["dist"],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["node", "react/experimental", "react-dom/experimental"],
		"jsx": "react-jsx",
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "Bundler",
		"strict": true,
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"rootDir": ".",
		"paths": {
			"@/*": ["./app/*"]
		}
	}
}
